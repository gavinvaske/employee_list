<h3>
  {{viewTitle}}
</h3>

<form action="/employee" method="POST">
  <div class="form-group">
    <label for="full-name">Full Name</label>
    <input class="form-control" type="text" name="fullName" placeholder="Full Name" value="{{employee.fullName}}">
    <div class="text-danger">{{employee.fullNameError}}</div>
  </div>
    <div class="form-group">
    <label for="email">Email</label>
    <input class="form-control" type="text" name="email" placeholder="Email" value="{{employee.email}}">
        <div class="text-danger">{{employee.emailError}}</div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="mobile">Mobile</label>
      <input class="form-control" type="text" name="mobile" placeholder="Mobile" value="{{employee.mobile}}">
    </div>
    <div class="form-group col-md-6">
      <label for="city">City</label>
      <input class="form-control" type="text" name="city" placeholder="City" value="{{employee.city}}">
    </div>
  </div>
    <div class="form-group">
    <button class="btn btn-info" type="submit"><i class="fa fa-database"></i>Submit</button>
  </div>
</form>